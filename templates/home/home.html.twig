{% extends 'base.html.twig' %}

{% block body %}
<h1>Nos derniers livres</h1>

<hr />

{% for book in books %}
    <div>
        <p>{{ book.title }}</p>
        <p>Prix : {{ book.price }} €</p>
        <p>Catégories :</p>
        <nav>
            {% for catego in book.category %}
                <a href="">{{ catego.name }}</a>
                <a href="{{ path('app_cat_display', {id: catego.id}) }}">{{ catego.name }}</a>
            {% endfor %}
        </nav>
    </div>
    <hr />
{% endfor %}

{% endblock %}